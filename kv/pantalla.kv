<Pantalla>
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"
    canvas:
        Color: 
            rgba: (200,200,200,.8)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: label
        color: 0,0,0,1
        font_size: "25sp"

    Button:
        text: "Banner"
        background_normal: ""
        background_color: 161/255,251/255,142/255,.8
        on_release: root.mostrar()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8

    Button:
        text: "Intersticial"
        background_normal: ""
        background_color: 50/255,130/255,246/255,.8
        on_release: root.mostrar_intersticial()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8

    Button:
        text: "Bonificado"
        background_normal: ""
        background_color: 238/255,138/255,248/255,.8
        on_release: root.mostrar_video()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8

    Button:
        text: "Intersticial Bonificado"
        background_normal: ""
        background_color: 22/255,65/255,124/255,.8
        on_release: root.mostrar_intersticia_bonificado()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8

    Button:
        text: "Popup"
        background_normal: ""
        background_color: 240/255,155/255,89/255,.8
        on_release: root.mostrar_popup()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8
    Button:
        text: "Cargando anuncios"
        background_normal: ""
        background_color: 255/255,254/255,145/255,.8
        on_release: root.cargar_anuncios()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8
    

    Label:
        text:""

<Mensaje_Popup>
    auto_dismiss: False
    size_hint: 0.95, 0.95
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    title: "" 
    separator_height: 0
    background_normal: ""    
    background_color: [251/255, 252/255, 252/255, 0]
    BoxLayout:
        orientation: "vertical"
        size_hint: .95, .6
        pos_hint:{'center_x':0.5, 'top': .9}
        padding: "5dp", "5dp"
        spacing: "10dp"
        canvas.before:
            Color:
                rgba: (245/255, 245/255, 245/255, .9)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, .9
            padding: "5dp", "5dp"
            spacing: "10dp"

            Label:
                size_hint: .95, 0.65
                pos_hint:{'center_x':0.5, 'top': .8}
                markup: True
                text: "[color=#000000]Popop de prueba para Anuncios[/color]"
                bold: True
                font_size: "22sp"
            Button:
                size_hint: .6, 0.35
                pos_hint:{'center_x':0.5, 'center_y': 0.5}
                text: "Salir"
                background_normal: ""
                background_color: 161/255,251/255,142/255,.8
                on_release: root.salir_popup()
                font_size: "30dp"
                color: 0.2,0.2,0.2,1
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, .1
            padding: "5dp", "5dp"
            spacing: "10dp"

            Label:
                pos_hint:{'center_x':0.5, 'center_y': .5}
                text: "Publicidad"
                font_size: "16sp"
            
            
    
    

<Pantalla>
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"
    canvas:
        Color: 
            rgba: (200,200,200,.8)
        Rectangle:
            pos: self.pos
            size: self.size

        

    Label:
        id: label
        color: 0,0,0,1
        font_size: "25sp"

    Button:
        text: "Mostar banner"
        background_normal: ""
        background_color: 161/255,251/255,142/255,.8
        on_release: root.mostrar()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8

    Button:
        text: "Quitar banner"
        background_normal: ""
        background_color: 255/255,254/255,145/255,.8
        on_release: root.quitar()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8
    Button:
        text: "Mostar Intersticial"
        background_normal: ""
        background_color: 50/255,130/255,246/255,.8
        on_release: root.mostrar_intersticial()
        font_size: "30dp"
        color: 0.2,0.2,0.2,0.8